import java.util.*;
public class ProcessingNumbers {

	public static void main(String[] args) {
		Scanner input= new Scanner(System.in);
		System.out.println("enter amount of numbers");
		int evenSum=0;
		int evenMax=0;
		int n=input.nextInt();
		System.out.print("Start entering your numbers");
		int firstNumber=input.nextInt();
		int max=firstNumber;
		int min=firstNumber;
		if(firstNumber==0)
			evenMax=firstNumber;
		for(int i=1;i<n;i++){
			int listOfNumbers=input.nextInt();
			if (listOfNumbers>max)
				max=listOfNumbers;
			if (listOfNumbers<max)
				min=listOfNumbers;
			if(listOfNumbers%2==0){
				evenSum+=listOfNumbers;
				if (listOfNumbers>evenMax)
					evenMax=listOfNumbers;
			}
		}
		System.out.println("max: "+max);
		System.out.println("min: "+min);
		System.out.println("sum of even numbers: "+evenSum);
		System.out.println("max of even numbers: "+evenMax);
	}

}
