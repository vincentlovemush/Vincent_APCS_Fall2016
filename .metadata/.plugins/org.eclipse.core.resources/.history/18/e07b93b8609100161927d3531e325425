
public class HourglassNathan {
	public static void main(String[] args){
		specialLine(8);
		for(int i=-3;i<=3;i++){
			int positive=i;
			if (i<0)
				positive=-i;
			for(int j=4-positive;j>=0;j--)
				System.out.print(" ");
			if(i<0){
				System.out.print("\\");
				semicolons(positive);
				System.out.println("/");
			}
			else if(i>0){
				System.out.print("/");
				semicolons(positive);
				System.out.println("\\");
			}
			else
				System.out.println("||");
		}
		specialLine(8);
	}
	public static void specialLine(int number){
		System.out.print("|");
		for(int i=1;i<=number;i++)
			System.out.print("\"");
		System.out.println("|");
	}
	public static void semicolons(int number){
		for(int i=number;i>0;i--)
			System.out.print(";;");
	}
}

